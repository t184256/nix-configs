              "\"TabsToolbar\"," +
              "\"vertical-tabs\"," +
              "\"PersonalToolbar\"," +
              "\"toolbar-menubar\"" +
              "],"
            ) +
            "\"currentVersion\":22," +
            "\"newElementCount\":1" +
            "}"
          );
          "sidebar.backupState" = "{" + (
            "\"panelOpen\":false," +
            "\"launcherWidth\":57," +
            "\"launcherExpanded\":false," +
            "\"launcherVisible\":true"
          ) + "}";
