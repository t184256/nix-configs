<?xml version="1.0"?>
<ThermalConfiguration>
  <Platform>
    <Name>Override CPU default passive</Name>
    <ProductName>*</ProductName>
    <Preference>QUIET</Preference>
    <PPCC>
      <PowerLimitIndex>0</PowerLimitIndex>
      <PowerLimitMaximum>35000</PowerLimitMaximum>
      <PowerLimitMinimum>1000</PowerLimitMinimum>
      <TimeWindowMinimum>3</TimeWindowMinimum>
      <TimeWindowMaximum>6</TimeWindowMaximum>
      <StepSize>100</StepSize>
    </PPCC>
    <ThermalZones>
      <ThermalZone>
        <Type>cpu</Type>
        <TripPoints>
          <TripPoint>
            <SensorType>x86_pkg_temp</SensorType>
            <Temperature>35000</Temperature>
            <type>passive</type>
            <CoolingDevice>
              <type>rapl_controller</type>
              <influence>500</influence>
              <TargetState>20000</TargetState>
            </CoolingDevice>
          </TripPoint>
          <TripPoint>
            <SensorType>x86_pkg_temp</SensorType>
            <Temperature>40000</Temperature>
            <type>passive</type>
            <ControlType>SEQUENTIAL</ControlType>
            <CoolingDevice>
              <index>1</index>
              <type>rapl_controller</type>
              <influence>500</influence>
              <TargetState>9000</TargetState>
            </CoolingDevice>
          </TripPoint>
          <TripPoint>
            <SensorType>x86_pkg_temp</SensorType>
            <Temperature>45000</Temperature>
            <type>passive</type>
            <ControlType>SEQUENTIAL</ControlType>
            <CoolingDevice>
              <index>1</index>
              <type>rapl_controller</type>
              <influence>500</influence>
              <TargetState>2000</TargetState>
            </CoolingDevice>
            <CoolingDevice>
              <index>2</index>
              <type>intel_pstate</type>
              <influence>100</influence>
            </CoolingDevice>
            <CoolingDevice>
              <index>3</index>
              <type>cpufreq</type>
              <influence>10</influence>
            </CoolingDevice>
          </TripPoint>
        </TripPoints>
          <TripPoint>
            <SensorType>x86_pkg_temp</SensorType>
            <Temperature>95000</Temperature>
