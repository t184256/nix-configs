            <CoolingDevice>
              <index>1</index>
              <type>rapl_controller</type>
              <influence>500</influence>
              <TargetState>1000</TargetState>
            </CoolingDevice>
            <CoolingDevice>
              <index>2</index>
              <type>intel_pstate</type>
              <influence>100</influence>
            </CoolingDevice>
            <CoolingDevice>
              <index>3</index>
              <type>cpufreq</type>
              <influence>10</influence>
            </CoolingDevice>
          </TripPoint>
      </ThermalZone>
    </ThermalZones>
  </Platform>
</ThermalConfiguration>
